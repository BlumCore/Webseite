namespace :revisions do

    desc "Shows all revisions"
	task :show_all do
  		on roles(:web) do
            execute "cat #{fetch(:deploy_to)}/revisions.log"
		end
	end

    desc "Shows current revision"
	task :show_current do
  		on roles(:web) do
            execute "cat #{release_path}/REVISION"
		end
	end

end
