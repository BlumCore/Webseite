<div class="calendar">
    <div class="container">
        <div class="row">
            <div class="gr-24 gr-12@small">
                <h2 class="calendar__title">Mein Rennkalender</h2>
            </div>
            <div class="gr-24 gr-12@small ">
            <ul>
            {% set races = craft.entries().section('races').orderBy("date").all() %}
               {% for e in races %}
                    <li class="calendar__li">{{ e.date|date("d.m.Y") }}, {{ e.title }}, {{ e.track}} </li>
               {% endfor %}
               </ul>
            </div>
        </div>
    </div>
</div>
